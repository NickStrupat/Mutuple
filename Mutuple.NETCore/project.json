{
	"version": "0.1.0",
	"title": "Mutuple",
	"description": "Mutable tuple class library for those times when you need mutable, reference-type tuples",
	"authors": [ "Nick Strupat" ],
	"packOptions": {
		"tags": [ "mutable", "tuple", "tuples", "mutuple", "mutuples" ],
		"projectUrl": "https://github.com/NickStrupat/Mutuple",
		"licenseUrl": "https://raw.githubusercontent.com/NickStrupat/Mutuple/master/LICENSE"
	},

	"configurations": {
		"Debug": {
			"buildOptions": {
				"define": [ "DEBUG", "TRACE", "NET_CORE" ]
			}
		},
		"Release": {
			"buildOptions": {
				"define": [ "RELEASE", "TRACE", "NET_CORE" ],
				"optimize": true
			}
		}
	},

	"dependencies": {
		"NETStandard.Library": "1.6.1"
	},

	"buildOptions": {
		"compile": [ "../Mutuple.NET45/*.cs" ]
	},

	"frameworks": {
		"net451": {},
		"netstandard1.3": {
			"buildOptions": { "outputName": "Mutuple.netstandard1.3" },
			"imports": "dnxcore50"
		}
	}
}
